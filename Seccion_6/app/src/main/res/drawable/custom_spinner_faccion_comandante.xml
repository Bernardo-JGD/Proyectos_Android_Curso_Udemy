<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo y borde del Spinner -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Color de fondo -->
            <stroke
                android:width="4dp"
                android:color="#595959" /> <!-- Borde -->
            <corners android:radius="4dp" /> <!-- Radio de esquinas -->
        </shape>
    </item>

    <!-- Flecha personalizada del Spinner -->
    <item android:drawable="@drawable/custom_spinner_flecha_abajo" android:width="24dp" android:height="24dp" android:gravity="end|center_vertical" />
</layer-list>

