<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Barra de progreso (background) -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#CCCCCC" /> <!-- Cambia el color y otros atributos según lo desees -->
        </shape>
    </item>
    <!-- Barra de progreso (progress) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#00FF00" /> <!-- Cambia el color y otros atributos según lo desees -->
            </shape>
        </clip>
    </item>
</layer-list>

